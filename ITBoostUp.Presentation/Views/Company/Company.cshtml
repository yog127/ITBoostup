@model List<ITBoostUp.BusinessLayer.Model.Company>
    <h1>Create</h1>
    <div>
        <a asp-controller="Company" asp-action="Create" class="btn btn-primary">Create Company</a>
    </div>
    <div>
        <table class="table">
            <tr>
                <th>CompanyId</th>
                <th>Company Name</th>
                <th>Company Address</th>
                <th>Action</th>
                <th></th>
            </tr>
        @foreach (var company in Model)
        {
            <tr>
            <td>@company.Id</td>
            <td>@company.Name</td>
            <td>@company.Address</td>
            <td>
                    <a asp-controller="Company" asp-action="GetById" asp-route-id="@company.Id">View</a>
                    <a asp-controller="Company" asp-action="Update" asp-route-id="@company.Id">Edit</a>
                    <a asp-controller="Company" asp-action="Delete" asp-route-id="@company.Id">Delete</a>

            </td>
            </tr>
        }
        </table>
    </div>
    <br />