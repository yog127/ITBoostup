@model List<ITBoostUp.BusinessLayer.Model.StateList>
    <div>
    <div>
        <a class="btn btn-primary mx-2" asp-controller="State" asp-action="State" asp-route-id="0">All</a>
        <a class="btn btn-success mx-2" asp-controller="State" asp-action="State" asp-route-id="1">Active</a>
        <a class="btn btn-danger mx-2" asp-controller="State" asp-action="State" asp-route-id="2">NotActive</a>
    </div>
        <div class="row">
            <div class="col-md-8">
            <table class="table table-striped">
                    <tr>
                        <th>State Id</th>
                        <th>Country Name</th>
                        <th>State Name</th>
                        <th>State Description</th>
                        <th>IsActive</th>
                        <th>Action</th>
                    </tr>
                    @foreach (var state in Model)
                    {
                        <tr>
                            <td>@state.StateId</td>
                            <td>@state.CountryName </td>
                            <td>@state.StateName</td>
                            <td>@state.StateDescription</td>
                            <td>@state.IsActive</td>
                            <td>
                                <a asp-controller="State" asp-action="GetById" asp-route-id="@state.StateId" class="btn btn-group">View</a>
                            <a asp-controller="State" asp-action="Update" asp-route-id="@state.StateId" class="btn btn-group">Edit</a>
                            <a asp-controller="State" asp-action="Delete" asp-route-id="@state.StateId" class="btn btn-group">Delete</a>
                            </td>
                        </tr>
                    }
                </table>
            </div>
            <div class="col-md-4">
            <h1>Create State</h1>
            @await Html.PartialAsync("Create", new ITBoostUp.BusinessLayer.Model.State())
            </div>
        </div>
    </div>
<br />